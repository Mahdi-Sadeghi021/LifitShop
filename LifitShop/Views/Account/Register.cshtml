@using DataAccess.Models
@model User

@{
    ViewData["Title"] = "Register";
}

<body class="overflow-y-auto bg-gray-100 dark:bg-gray-900">

    <!-- ALL ICONS -->
    <svg class="hidden">
        <symbol id="moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd"
                  d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z"
                  clip-rule="evenodd" />
        </symbol>
        <symbol id="sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path d="M12 2.25a.75.75 0 0 1 .75.75v2.25a.75.75 0 0 1-1.5 0V3a.75.75 0 0 1 .75-.75ZM7.5 12a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM18.894 6.166a.75.75 0 0 0-1.06-1.06l-1.591 1.59a.75.75 0 1 0 1.06 1.061l1.591-1.59ZM21.75 12a.75.75 0 0 1-.75.75h-2.25a.75.75 0 0 1 0-1.5H21a.75.75 0 0 1 .75.75ZM17.834 18.894a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 1 0-1.061 1.06l1.59 1.591ZM12 18a.75.75 0 0 1 .75.75V21a.75.75 0 0 1-1.5 0v-2.25A.75.75 0 0 1 12 18ZM7.758 17.303a.75.75 0 0 0-1.061-1.06l-1.591 1.59a.75.75 0 0 0 1.06 1.061l1.591-1.59ZM6 12a.75.75 0 0 1-.75.75H3a.75.75 0 0 1 0-1.5h2.25A.75.75 0 0 1 6 12ZM6.697 7.757a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 0 0-1.061 1.06l1.59 1.591Z" />
        </symbol>
    </svg>

    <section class="relative flex items-center justify-center min-h-screen w-full py-10">
        <div class="relative w-full max-w-md mx-5 flex flex-col justify-center py-12 px-6 md:px-8 bg-white dark:bg-gray-800 shadow-md rounded-xl">
            <div class="flex items-center justify-center mb-8">
                <button class="toggle-theme absolute left-2 top-2 flex-center p-1.5 rounded-full text-gray-300">
                    <svg class="inline-block dark:hidden size-5">
                        <use href="#moon" />
                    </svg>
                    <svg class="hidden dark:inline size-5">
                        <use href="#sun" />
                    </svg>
                </button>
                <a href="index.html" class="flex flex-col text-center">
                    <span class="font-MorabbaMedium text-4xl flex items-center">
                        <span class="text-blue-500">Lifit</span> Shop
                    </span>
                </a>
            </div>

            <p class="mb-4 text-gray-800 dark:text-gray-100 font-DanaMedium text-lg text-center">ثبت‌نام / ورود</p>

            <form asp-controller="Account" asp-action="Register" method="POST" class="space-y-4">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-500 dark:text-gray-300">نام و نام خانوادگی</label>
                    <input asp-for="FullName" type="text" required class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="mobileNumber" class="block text-sm font-medium text-gray-500 dark:text-gray-300">شماره موبایل</label>
                    <input asp-for="mobileNumber" type="text" required class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="mobileNumber" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Address" class="block text-sm font-medium text-gray-500 dark:text-gray-300">آدرس</label>
                    <input asp-for="Address" type="text" required class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PostalCode" class="block text-sm font-medium text-gray-500 dark:text-gray-300">کد پستی</label>
                    <input asp-for="PostalCode" type="text" required class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="PostalCode" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="w-full py-3 rounded-md bg-blue-500 text-white font-medium hover:bg-blue-600 transition">ثبت‌نام</button>
                </div>
            </form>

            <p class="mt-6 text-center text-sm text-gray-500 dark:text-gray-300">
                ورود شما به معنای پذیرش <span class="text-blue-400">قوانین سایت</span> است
            </p>
        </div>
    </section>

    <script src="~/js/app.js" asp-append-version="true"></script>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
