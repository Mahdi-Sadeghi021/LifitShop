 @using Business.CategoryServise
@using DataAccess.Models
@using DataAccess.Repositories.Categoryrepository
@inject ICategoryRepository _categoryService
@{
    var categories = await _categoryService.GetAllAsync();

    // نگاشت CategoryId به تصویر
    var categoryImages = new Dictionary<int, string>
    {
        { 2, "/assets/images/category/5.png" },   // موبایل
        { 1002, "/assets/images/category/6.png" },   // کالای دیجیتال
        { 3, "/assets/images/category/7.png" },   // خانه و آشپزخانه
        { 4, "/assets/images/category/8.png" },   // آرایشی بهداشتی
        { 5, "/assets/images/category/9.png" },   // لوازم تحریر
        { 6, "/assets/images/category/10.png" },  // گیفت کارت
        { 7, "/assets/images/category/11.png" }   // ابزار آلات
    };
}
<section class="mx-4 lg:container mt-20">
    <div class="flex flex-col gap-y-4 xs:flex-row items-center justify-between w-full text-center xs:text-start">
        <h3 class="text-xl md:text-2xl font-MorabbaMedium text-gray-800 dark:text-gray-50">
            دسـته بندی هـای <span class="text-blue-600 dark:text-blue-500">محبوب</span>
        </h3>
    </div>

    <div class="flex flex-wrap mt-12 gap-6">
        @foreach (var item in categories)
        {
            <a asp-controller="Home" asp-action="Store" asp-route-categoryId="@item.CategoryId" class="group flex flex-col items-center">
                <img src="@(categoryImages.ContainsKey(item.CategoryId) ? categoryImages[item.CategoryId] : "/assets/images/category/default.png")"
                     class="w-[100px] h-[100px] lg:w-[120px] lg:h-[120px] object-cover group-hover:grayscale group-hover:opacity-90 duration-300"
                     alt="@item.CategoryName" />
                <p class="pt-1 text-sm lg:text-lg line-clamp-1">@item.CategoryName</p>
            </a>
        }
    </div>
</section>
