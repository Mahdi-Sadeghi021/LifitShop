@using Business.BrandServise
@using DataAccess.Models
@using DataAccess.Repositories.BrandRepository
@inject IBrandRepository _brandService

@{
    var brands = await _brandService.GetAll();
}

<section class="mx-4 lg:container mt-10 lg:mt-20">
    <!-- SECTION TITLE -->
    <div class="flex flex-col gap-y-4 xs:flex-row items-center justify-between w-full text-center xs:text-start">
        <div class="flex items-center gap-x-2 sm:gap-x-4">
            <span class="size-12 hidden xs:flex rounded-lg bg-white shadow-lg dark:bg-gray-800 flex-center">
                <svg class="size-7 text-gray-700 dark:text-gray-100">
                    <use href="#check-badge"></use>
                </svg>
            </span>
            <div class="space-y-1 md:space-y-1">
                <h3 class="text-xl md:text-2xl font-MorabbaMedium text-gray-800 dark:text-gray-50">
                    محبوب‌ترین
                    <span class="text-blue-600 dark:text-blue-500">برندها</span>
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-300">جدیدترین و بروزترین برندها</p>
            </div>
        </div>
    </div>

    <!-- BRAND Slider -->

    <div class="swiper BrandSlider mt-5 w-full">
        <div class="swiper-wrapper py-5 w-full">
            @foreach (var brand in brands)
            {
                <div class="swiper-slide brand-card group">
                    <a asp-controller="Home" asp-action="Store" asp-route-brandId="@brand.BrandId"
                       class="flex flex-col items-center justify-center px-6 py-6 rounded-xl transition-transform duration-300 hover:scale-105"
                      >
                        <!-- بک‌گراند آبی تیره -->
                        <h3 class="text-pink-400 text-xl md:text-2xl font-extrabold uppercase tracking-widest text-center transition-colors duration-300 group-hover:text-pink-300">
                            @brand.BrandName
                        </h3>
                    </a>
                </div>
            }
        </div>
    </div>
    
</section>