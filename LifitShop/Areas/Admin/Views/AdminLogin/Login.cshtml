@model LifitShop.Areas.Admin.ViewModels.AdminLoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "ورود ادمین";
}

<body class="overflow-y-auto bg-gray-100 dark:bg-gray-900">

    <section class="relative flex items-center justify-center min-h-screen w-full py-10">
        <div class="relative w-full max-w-md mx-5 flex flex-col justify-center py-12 px-6 md:px-8 bg-white dark:bg-gray-800 shadow-md rounded-xl">
            <div class="flex items-center justify-center mb-8">
                <a href="/" class="flex flex-col text-center">
                    <span class="font-MorabbaMedium text-4xl flex items-center">
                        <span class="text-blue-500">Lifit</span> Shop Admin
                    </span>
                </a>
            </div>

            <p class="mb-4 text-gray-800 dark:text-gray-100 font-DanaMedium text-lg text-center">ورود ادمین</p>

            @if (ViewBag.Error != null)
            {
                <div class="text-red-500 mb-3 text-center">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="POST" class="space-y-4">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-500 dark:text-gray-300">ایمیل</label>
                    <input asp-for="Email" type="email" required
                           class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-500 dark:text-gray-300">رمز عبور</label>
                    <input asp-for="Password" type="password" required
                           class="mt-1 block w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-slate-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <div class="mt-4">
                    <button type="submit"
                            class="w-full py-3 rounded-md bg-blue-500 text-white font-medium hover:bg-blue-600 transition">
                        ورود
                    </button>
                </div>
            </form>
        </div>
    </section>

    <script src="~/js/app.js" asp-append-version="true"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
