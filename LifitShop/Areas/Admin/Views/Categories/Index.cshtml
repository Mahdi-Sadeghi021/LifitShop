@model IEnumerable<DataAccess.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>لیست دسته بندی ها</h1>

<p>
    <a asp-action="Create" class="btn btn-success">درج دسته بندی</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-primary">جزیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
