@model DataAccess.Models.Categories

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";
}

<h1>جزیات دسته بندی </h1>

<div>
    <h4>دسته بندی ها</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning">ویرایش</a> |
    <a asp-action="Index" class="btn btn-primary">برگشت به لیست</a>
</div>
